<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/asistencia/db" VERSION="2025121700" COMMENT="XMLDB file for local asistencia plugin"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>

    <TABLE NAME="local_asistencia" COMMENT="each record is an student fundamental attendance info">
      <FIELDS>
        <FIELD NAME="id"           TYPE="int"  LENGTH="10" NOTNULL="true"  SEQUENCE="true"/>
        <FIELD NAME="courseid"     TYPE="int"  LENGTH="10" NOTNULL="true"  SEQUENCE="false"/>
        <FIELD NAME="studentid"    TYPE="int"  LENGTH="10" NOTNULL="true"  SEQUENCE="false"/>
        <FIELD NAME="teacherid"    TYPE="int"  LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="attendance"   TYPE="text"             NOTNULL="true"  SEQUENCE="false"/>
        <FIELD NAME="date"         TYPE="text"             NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="observations" TYPE="text"             NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="amounthours"  TYPE="int"  LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="sessionid"    TYPE="int"  LENGTH="10" NOTNULL="true"  DEFAULT="1" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>

    <TABLE NAME="local_asistencia_config" COMMENT="each record is an external database parameter">
      <FIELDS>
        <FIELD NAME="id"    TYPE="int"  LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="name"  TYPE="text"             NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="value" TYPE="text"             NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>

    <TABLE NAME="local_asistencia_logs" COMMENT="each record is a log">
      <FIELDS>
        <FIELD NAME="id"      TYPE="int"  LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="code"    TYPE="text"             NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="message" TYPE="text"             NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="date"    TYPE="text"             NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="userid"  TYPE="int"  LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>

    <TABLE NAME="local_asistencia_permanente" COMMENT="each record is an attendance history of students in courses">
      <FIELDS>
        <FIELD NAME="id"              TYPE="int"  LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="course_id"       TYPE="int"  LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="student_id"      TYPE="int"  LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="session_id"      TYPE="int"  LENGTH="10" NOTNULL="true" DEFAULT="1" SEQUENCE="false"/>
        <FIELD NAME="full_attendance" TYPE="text"             NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>

    <TABLE NAME="local_asistencia_sesiones" COMMENT="Sesiones de asistencia por curso y fecha">
      <FIELDS>
        <FIELD NAME="id"          TYPE="int"  LENGTH="10" NOTNULL="true"  SEQUENCE="true"/>
        <FIELD NAME="courseid"    TYPE="int"  LENGTH="10" NOTNULL="true"  SEQUENCE="false"/>
        <FIELD NAME="teacherid"   TYPE="int"  LENGTH="10" NOTNULL="true"  SEQUENCE="false"/>
        <FIELD NAME="date"        TYPE="char" LENGTH="10" NOTNULL="true"  DEFAULT="" SEQUENCE="false"/>
        <FIELD NAME="createdat"   TYPE="int"  LENGTH="10" NOTNULL="true"  SEQUENCE="false"/>
        <FIELD NAME="sessionname" TYPE="char" LENGTH="255" NOTNULL="false" DEFAULT="" SEQUENCE="false"/>
        <FIELD NAME="sessiontime" TYPE="char" LENGTH="5"  NOTNULL="false" DEFAULT="08:00" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>

  </TABLES>
</XMLDB>
