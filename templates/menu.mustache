<div class="mx-1">
  <button
    type="button"
    class="btn btn-primary"
    onclick="location.href='/{{dirroot}}/course/view.php?id={{courseid}}'"
  >
  <i class="fa-solid fa-arrow-left" style="margin-right: 8px;"></i>
    Volver al curso
  </button>
</div>

<div class="container d-grid gap-2 col-6 mx-auto">
  <div class="button-container">
    <h2>{{titulo}}</h2>
    <div class="button-group">
        <button class="btn btn-primary btn-custom"
        onclick="location.href='/{{dirroot}}/local/asistencia/attendance.php?courseid={{courseid}}&page=1'">
  <i class="fa-solid fa-list-check" style="margin-right: 8px;"></i>
  <span>Asistencia general</span>
</button>
      <button
        type="button"
        class="btn btn-primary btn-custom"
        onclick="location.href='/{{dirroot}}/local/asistencia/previous_attendance.php?courseid={{courseid}}&page=1&info=p'"
      >
      <i class="fa-solid fa-list-check" style="margin-right: 8px;"></i>
       <span> Completar asistencia anterior</span>
      </button>
    </div>
    <div class="button-group">
      <button
        type="button"
        class="btn btn-primary btn-custom"
        onclick="location.href='/{{dirroot}}/local/asistencia/history.php?courseid={{courseid}}&page=1&info=h&range=0'"
      >
      <i class="fa-solid fa-clock-rotate-left"style="margin-right: 8px;"></i>
       <span> Hist√≥rico </span>
      </button>
      {{#config}}
      <button
        type="button"
        class="btn btn-primary btn-custom"
        onclick="location.href='/{{dirroot}}/local/asistencia/activities.php?courseid={{courseid}}'"
      >
        <i class="fa-solid fa-check" style="margin-right: 8px;"></i>
      <span>    Listar actividades </span>
      </button>
      {{/config}}
    </div>
  </div>
  
</div>
