<div class="mx-1">
  <button
    type="button"
    class="btn btn-primary"
    onclick="location.href='/{{dirroot}}/course/view.php?id={{courseid}}'"
  >
    Volver al curso
  </button>
</div>

<div class="container d-grid gap-2 col-6 mx-auto">
  <div class="button-container">
    <h2>{{titulo}}</h2>
    <div class="button-group">
      <button
        type="button"
        class="btn btn-primary btn-custom"
        onclick="location.href='/{{dirroot}}/local/asistencia/attendance.php?courseid={{courseid}}&page=1'"
      >
        Asistencia general
      </button>
      <button
        type="button"
        class="btn btn-primary btn-custom"
        onclick="location.href='/{{dirroot}}/local/asistencia/previous_attendance.php?courseid={{courseid}}&page=1&info=p'"
      >
        Completar asistencia anterior
      </button>
    </div>
    <div class="button-group">
      <button
        type="button"
        class="btn btn-primary btn-custom"
        onclick="location.href='/{{dirroot}}/local/asistencia/history.php?courseid={{courseid}}&page=1&info=h&range=0'"
      >
        Hist√≥rico
      </button>
      {{#config}}
      <button
        type="button"
        class="btn btn-primary btn-custom"
        onclick="location.href='/{{dirroot}}/local/asistencia/activities.php'"
      >
        Listar actividades
      </button>
      {{/config}}
    </div>
  </div>
</div>
