<div>
    <a href='/{{dirroot}}/'><- Página principal </a>
</div>
<br>
<br>
<h1 class="h1 display-1 text-primary" >Actividades</h1>
<div class="container fortable" style="width:auto; overflow-x: auto">
    <table class="table table-hover table-container">
            <tr>
                <th >
                    CÓDIGO
                </th>
                <th >
                    MENSAJE
                </th>
                <th >
                    FECHA
                </th>
                <th >
                    USERNAME
                </th>
            </tr>
            {{#activities}}
                <tr>
                    <td >
                        {{code}}
                    </td>
                    <td>
                        {{message}}
                    </td>
                    <td>
                        {{date}}
                    </td>
                    <td>
                        {{username}}
                    </td>
                </tr>
            {{/activities}}
    </table>
</div>

<div class="container">
        {{#pages}}
            {{#current}}
                <button type="button" class="btn btn-secondary" disabled>{{page}}</button>
            {{/current}}
            {{^current}}
            
                <button type="button" class="btn btn-primary" onclick="location.href='/{{dirroot}}/local/asistencia/activities.php?page={{page}}'" {{active}}>{{page}}</button>
            
            {{/current}}
        {{/pages}}
</div>