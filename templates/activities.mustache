{{!
    @template local_asistencia/manage


    Example context (json):
    {
       
    }
}}

<div class="d-flex justify-content-start ml-4 my-2">
  <div class="position-relative d-inline-block" onclick="location.href='/{{dirroot}}/local/asistencia/index.php?courseid={{courseid}}'" style="cursor: pointer;">
    <button type="button" class="btn btn-custom btn-small">
      Menú
    </button>
    <span class="icon-circle-overlap">
      <i class="fa-solid fa-arrow-left"></i>
    </span>
  </div>
</div>
        <br>
<div class="container fortable" style="width:auto; overflow-x: auto">
    <table class="table table-hover table-container" style="width: 100%; table-layout: fixed;">
            <tr>
                <th >
                    CÓDIGO
                </th>
                <th >
                    MENSAJE
                </th>
                <th >
                    FECHA
                </th>
                <th >
                    USERNAME
                </th>
            </tr>
            {{#activities}}
                <tr>
                    <td >
                        {{code}}
                    </td>
                    <td>
                        {{message}}
                    </td>
                    <td>
                        {{date}}
                    </td>
                    <td>
                        {{username}}
                    </td>
                </tr>
            {{/activities}}
    </table>
</div>

<div class="container my-2 d-flex flex-wrap justify-content-center">
    {{#pages}}
        <div class="mx-1">
            {{#current}}
                <button type="button" class="btn btn-secondary" disabled>{{page}}</button>
            {{/current}}

            {{^current}}
                {{#active}}
                    <button type="button" class="btn btn-light" disabled>{{page}}</button>
                {{/active}}

                {{^active}}
                    <button type="button" class="btn btn-primary"
                        onclick="location.href='/{{dirroot}}/local/asistencia/activities.php?courseid={{courseid}}&page={{page}}'">
                        {{page}}
                    </button>
                {{/active}}
            {{/current}}
        </div>
    {{/pages}}
</div>